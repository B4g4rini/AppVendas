@model IEnumerable<AppVendasWeb.Models.ItemDaVenda>

@{
    ViewData["Title"] = "Itens da Venda";
}

<h1 class="display-5 text-light my-5">Itens da Venda</h1>

<p>
    <a asp-action="Create" asp-route-id="@ViewData["VendaId"]" class="btn btn-lg btn-outline-light d-inline-flex align-items-center"> <svg class="me-2" bootstrap-icon="PlusLg" width="20" height="20" aria-label="Adicionar"></svg>Adicionar</a>
</p>
<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venda.NotaFiscal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td class="text-end">
                    <a class="text-decoration-none link-info" asp-action="Edit" asp-route-id="@item.ItemDaVendaId">
                        <svg class="mx-2" bootstrap-icon="PencilFill" width="16" height="16" aria-label="Adicionar"></svg>

                    </a> |


                    <a class="text-decoration-none link-warning" asp-action="Details" asp-route-id="@item.ItemDaVendaId">
                        <svg class="mx-2" bootstrap-icon="CardList" width="16" height="16" aria-label="Adicionar"></svg>

                    </a> |



                    <a class="text-decoration-none link-danger" asp-action="Delete" asp-route-id="@item.ItemDaVendaId">
                        <svg class="mx-2" bootstrap-icon="Trash" width="16" height="16" aria-label="Adicionar"></svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
