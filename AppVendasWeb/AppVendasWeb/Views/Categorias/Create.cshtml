@model AppVendasWeb.Models.Categoria

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4 ">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check form-switch my-3">
                <label asp-for="CategoriaNome" class="control-label form-group my-1 "></label>
                <input asp-for="CategoriaNome" class="form-control" />
                <span asp-validation-for="CategoriaNome" class="text-danger"></span>
            </div>
            <div class="form-group form-check form-switch ">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-light">Voltar</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
